  <main>
    <h2>Sign up</h2>
    <section id="sign_up">
      <form action="/signup/verifyotp" method="post">
        <label for="adminName">Full Name</label><br>
        <input class="ip" type="text" id="adminName" name="adminName" required><br>
        <label for="email">Email</label><br>
        <input class="ip" type="email" id="email" name="email" required><br>
        <label for="Password">Password</label><br>
        <input class="ip" type="password" id="Password" name="Password" required><br>
        <label for="cPassword">Conform Password</label><br>
        <input class="ip" type="password" id="cPassword" name="cPassword" required><br>
        <label for="mobile_no">Mobile no</label><br>
        <input class="ip" type="tel" id="mobile_no" name="mobile_no" pattern="[0-9]{10}" required><br>
        <label for="university">University</label><br>
        <input class="ip" type="text" id="university" name="university" required><br>
        <div class="bt">
          <button type="submit" value="Submit">Submit</button>
          <button type="reset" value="reset">Reset</button><br>
        </div>
        <p class="p">
          Already have an account? <a href="signin">sign in.</a>
        </p>
      </form>
      <img src="images/sign_up.png" alt="sign_up">
    </section>
  </main>

