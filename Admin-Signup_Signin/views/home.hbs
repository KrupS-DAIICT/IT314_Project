      {{#if user}}
        <form class="logout" action="/logout" method="POST">
            <button type="submit">LogOut</button>
        </form>
        
        {{else}}
       <form  action="/login" method="get">
       <button type="submit" class="btn btn-light">Sign in</button>
       </form>
       
    {{/if}}
        <form  action="/signup" method="get">
        
        <button type="submit" class="btn btn-light">Sign up</button>

        </form>
      
      
    </nav>
  </header>


  <!-- Main Content -->

  <main>
  	<div>
  		<div class="mt-4 d-flex justify-content-center">
        <div class="input-group bg-primary w-50 rounded-5">
            <button id="search-button" type="button" class="btn rounded-start-5">
                <i class="fas fa-search" style="color: #ffffff;"></i>
            </button>
            <input type="text" id="form12" class="form-control shadow-none"
                placeholder="Search with university name or faculty name or area of intelligence" />
            <button class="btn rounded-end rounded-end-5">
                <i class="fa-solid fa-filter" style="color: #ffffff;"></i>
            </button>
        </div>
    </div>
    <div class="d-flex mt-4 justify-content-center flex-column align-items-center mb-2">
        <div class="text-bold fs-4 fw-bolder">
            Trending Topics
        </div>
    </div>
        <div id="carouselExampleAutoplaying" class="carousel slide container w-50" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/image1.jpg" class="d-block w-100 " alt="...">
            </div>
            <div class="carousel-item">
                <img src="images/image2.jpg" class="d-block w-100"  alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="d-flex mt-4 justify-content-center flex-column align-items-center mb-4">
         <div class="text-bold fs-4 fw-bolder">
           Universities
        </div>
    </div>
     <div class="third-div d-flex gap-5 justify-content-center w-100">
        <img src="images/da_logo.png" alt="">
        <img src="images/iit_gn_logo.png" alt="" >
        <img src="images/ni_logo.png" alt="" >
        <img src="images/pd_logo.png" alt="" >
    </div>
    </main>
    
