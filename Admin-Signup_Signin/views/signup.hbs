}
.radio{
    display: flex;
    font-size: 20px;
    margin: .5vh;
}
.radio p{
    padding: 0px 5vw 3vh 0px;
}
.p{
    font-size: 15px;
    margin-top: 10px;
    margin-left: 9vw;
}

button{
    margin: 1vh 2vw 1vh 5vw;
    width: 120px;
    height: 40px;
    border: 1px solid rgb(13, 8, 52);
    border-radius: 20px;
}

footer{
    display: flex;
    margin-top: 5vw;
    justify-content: space-around;
    align-items: center;
    background-color: #588414;
    color: white;
}
.left a {
        display: block;
        padding: 1vh 4vw 2vh 2vw;
        text-decoration: none;
        text-decoration: underline;
        color: #ffffff; /* Link color */
        font-size: 20px;
      }
.right {
    position:static;
    text-align: left;
    width: 28vw;
    font-size: 20px;
}

.right h2{
    position: static;
    text-align: left;
}
