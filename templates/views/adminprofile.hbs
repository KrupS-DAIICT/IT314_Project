<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../css/admin_profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script>
        function showSubmitButton() {
            document.getElementById("submitBtn").style.display = "block";
            document.getElementById("editBtn").style.display = "none";
            var form = document.getElementById("myForm");
            var elements = form.elements;
            for (var i = 0; i < elements.length; i++) {
                elements[i].disabled = false;
            }
        }
        function hideSubmitButton() {
            document.getElementById("editBtn").style.display = "block";
            document.getElementById("submitBtn").style.display = "none";
            var form = document.getElementById("myForm");
            var elements = form.elements;
            for (var i = 0; i < elements.length; i++) {
                elements[i].disabled = true;
            }
            var edit = document.getElementById("editBtn");
            edit.disabled = false;
        }

    </script>
</head>

<body>

    {{>header}}

    <main>
        <h1>Profile</h1>
        <div class="container-fluid" id="main">
            <div class="col-lg-4 col-md-8 m-auto mt-5" id="main1">


                <label for='myFile'><img class="img-fluid" id="img1"
                        src="data:{{profile.image.contentType}};base64,{{profile.image.data}}"
                        onerror="this.onerror=null; this.src='https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png'"></label>
            </div>
            <div class="col-lg-6 m-auto" id="main2">
                <div class="card-body">
                    <form id="myForm" action="/admin-profile-update/{{profile._id}}" method="post"
                        enctype="multipart/form-data">

                        <div class="col-lg-4 col-md-8 m-auto mt-5" id="main1">
                            <input disabled type="file" id="myFile" name="admin_img" style="display: none;"
                                accept="image/*">

                        </div>


                        <div>
                            <label>Full Name:</label>
                            <input disabled type="text" name="name" class="form-control" value="{{profile.name}}"
                                required>
                        </div>
                        <div>
                            <label>Email: </label>
                            <input disabled type="email" name="email" class="form-control" value="{{profile.email}}"
                                required>
                        </div>

                        <div>
                            <label>Mobile No: </label>
                            <input disabled type="text" name="mobile_no" class="form-control" value="{{profile.phone}}"
                                required>
                        </div>
                        <div>
                            <label>University: </label>
                            <input disabled type="text" name="university" class="form-control"
                                value="{{profile.university}}" required>
                        </div>
                        <div>
                            <label>University Location: </label>
                            <input disabled type="text" name="university_address" class="form-control"
                                value="{{profile.address}}">
                        </div>
                        <div>
                            <label>University Logo: </label><br>
                            <div><label for='LogoFile'><img class="img-fluid" id="img2"
                                        src="data:{{profile.university_img.contentType}};base64,{{profile.university_img.data}}"
                                        style="width:100px; height: 100px; border-radius:100%; cursor:pointer; box-shadow: 4px 4px 4px rgb(87, 105, 107);"></label>
                            </div>

                            <input disabled type="file" id="LogoFile" name="university_img" class="form-control"
                                style="display: none;">
                        </div>
                        <div class="form-group mt-2">
                            <button type="button" class="btn btn-outline-secondary" id="editBtn"
                                onclick="showSubmitButton()">Edit</button>
                            <button type="submit" class="btn btn-primary" id="submitBtn"
                                style="display: none;">Submit</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>


    </main>
    {{>footer}}
    {{!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script> --}}
    <script>
        document.getElementById('myFile').addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const previewImage = document.getElementById('img1');
                    previewImage.src = e.target.result;

                }
                reader.readAsDataURL(file);
            }
        });

        document.getElementById('LogoFile').addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const previewImage = document.getElementById('img2');
                    previewImage.src = e.target.result;

                }
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>

</html>
