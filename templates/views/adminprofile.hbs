<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {{!-- <link rel="stylesheet" href="css/admin_style2.css"> --}}
  <style>
    * {
      margin: 0;
      padding: 0;
      text-decoration: none;
      font-family: sans-serif;
    }

    #main {
      display: flex;
      margin-bottom: 100px;
    }

    #img1 {
      float: right;
      border: 2px solid black;
      border-radius: 40px;
      top: 20px;
      cursor: pointer;
      box-shadow: 8px 8px 4px rgb(87, 105, 107);
      width: 30vw;
      height: 30vh;
    }

    h1 {
      text-align: center;
      padding-top: 10px;
    }

    .left a {
      display: block;
      margin-left: 5%;
      padding: 1vh 4vw 2vh 2vw;
      text-decoration: none;
      text-decoration: underline;
      color: #ffffff;
      /* Link color */
      font-size: 20px;
    }

    .right {
      position: static;
      text-align: left;
      width: 28vw;
      font-size: 20px;
    }

    .right h2 {
      position: static;
      text-align: left;
    }


    @media only screen and (max-width: 800px) {
      footer {
        flex-direction: column;
      }

      .left {
        width: 100%;
        margin: 0px;
        padding: 2vw;
      }

      .footer_title {
        margin-left: 0px;
      }

      .left a {
        margin-left: 0px;
        padding: 0px;
      }

      .right {
        width: 100%;
        padding: 2vw;
      }

    }

    @media only screen and (max-width: 992px) {
      #main {
        flex-direction: column;
      }

      #main1 {
        width: 50%;
      }

      #img1 {
        float: right;
        border: 2px solid black;
        border-radius: 40px;
        top: 20px;
        cursor: pointer;
        box-shadow: 8px 8px 4px rgb(87, 105, 107);
      }

      #main2 {
        width: 100%;
      }
    }
  </style>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title></title>
</head>
<script>
  function showSubmitButton() {
    document.getElementById("submitBtn").style.display = "block";
    document.getElementById("editBtn").style.display = "none";
    var form = document.getElementById("myForm");
    var elements = form.elements;
    for (var i = 0; i < elements.length; i++) {
      elements[i].disabled = false;
    }
  }
  function hideSubmitButton() {
    document.getElementById("editBtn").style.display = "block";
    document.getElementById("submitBtn").style.display = "none";
    var form = document.getElementById("myForm");
    var elements = form.elements;
    for (var i = 0; i < elements.length; i++) {
      elements[i].disabled = true;
    }
    var edit = document.getElementById("editBtn");
    edit.disabled = false;
  }
</script>

<body>
  {{>header}}
  <main>
    <h1>Profile</h1>
    <div class="container-fluid" id="main">
      <div class="col-lg-4 col-md-8 m-auto mt-5" id="main1">


        <img id="img1" src="data:{{profile.image.contentType}};base64,{{profile.image.data}}" alt="Uploaded Image">

      </div>
      <div class="col-lg-6 m-auto" id="main2">
        <div class="card-body">
          <form id="myForm" action="/admin-profile-update/{{profile._id}}" method="post" enctype="multipart/form-data">

            <div>
              <label>Full Name</label>
              <input disabled type="text" name="name" class="form-control" value="{{profile.name}}" required>
            </div>
            <div>
              <label>Email-Address</label>
              <input disabled type="email" name="email" class="form-control" value="{{profile.email}}" required>
            </div>

            <div>
              <label>Mobile No</label>
              <input disabled type="text" name="mobile_no" class="form-control" value="{{profile.phone}}" required>
            </div>
            <div>
              <label>University</label>
              <input disabled type="text" name="university" class="form-control" value="{{profile.university}}"
                required>
            </div>

            <div class="form-group mt-2">
              <button type="button" class="btn btn-outline-secondary" id="editBtn"
                onclick="showSubmitButton()">Edit</button>
              <button type="submit" class="btn btn-primary" id="submitBtn" style="display: none;">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>


  </main>
  {{>footer}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>

</html>